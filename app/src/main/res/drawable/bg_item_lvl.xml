            <corners android:radius="@dimen/radius_small" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="@color/shadow_white_4" />

            <corners android:radius="@dimen/radius_small" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="@color/shadow_white_5" />

            <corners android:radius="@dimen/radius_small" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/transparent" />
            <stroke
                android:color="@color/white"
                android:width="@dimen/width_small"/>

            <corners android:radius="@dimen/radius_small" />
        </shape>
    </item>

</layer-list>

